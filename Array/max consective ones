class Solution {
    fun findMaxConsecutiveOnes(nums: IntArray): Int {
        var count =0
        var max = Int.MIN_VALUE
        for(i in 0 until nums.size ){
            count =0
            for(j in i until nums.size){
                if(nums[j]==1){
                    count++
                }
                else
                 break
            }
            max = maxOf(max,count)
        }
        return max
    }
}

