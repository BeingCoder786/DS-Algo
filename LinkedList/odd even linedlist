class Solution {
    fun oddEvenList(head: ListNode?): ListNode? {
        if(head==null)
           return null;
       var odd=head
        var  even=head.next
        var evenhead=even
        while(even!=null&&even.next!=null)
        {
            odd?.next=even?.next
            odd=odd?.next
            even?.next=odd?.next
            even=even?.next
        }
       odd?.next=evenhead;
        return head;
        
        
    }
    
